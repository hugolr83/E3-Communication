{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/camelcase": "off",
        "camelcase": "off",
        "@typescript-eslint/naming-convention": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "indent": "off",
        "space-before-function-paren": "off",
        "promise/param-names": "off"
    }
}